#!/usr/bin/env bash

# dev home
export DEVPATH="$HOME/dev"
export DEVHOME="$DEVPATH/home"
export PATH="$PATH:$DEVHOME/bin"

# brew installed packages get priority
export PATH="/usr/local/bin:/usr/local/sbin:$PATH"

# python
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PATH:$PYENV_ROOT/bin"

# go
export GOPATH="$DEVHOME/go"
export GOROOT="/usr/local/opt/go/libexec"
export PATH="$PATH:$GOPATH/bin:$GOROOT/bin"

# android
export ANDROID_SDK_ROOT="$DEVHOME/android"
export ANDROID_HOME="$ANDROID_SDK_ROOT"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# deno
export DENO_HOME="$HOME/.deno"
export PATH="$PATH:$DENO_HOME/bin"

# rust
export RUST_HOME="$HOME/.cargo/bin"

# perl
export PATH="$DEVHOME/perl5/bin${PATH:+:${PATH}}"
export PERL5LIB="$DEVHOME/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"
export PERL_LOCAL_LIB_ROOT="$DEVHOME/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"
export PERL_MB_OPT="--install_base \"$DEVHOME/perl5\""
export PERL_MM_OPT="INSTALL_BASE=$DEVHOME/perl5"